{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-sass-guidelines",
    "stylelint-config-concentric-order"
  ],
  "ignoreFiles": [
    "ngx-fudis/dist/**/*",
    "static/**/*",
    "ngx-fudis/projects/ngx-fudis/style.scss",
    "ngx-fudis/projects/ngx-fudis/coverage/**/*",
    "coverage/**/*"
  ],
  "rules": {
    "order/properties-alphabetical-order": null,
    "color-no-hex": true,
    "color-hex-length": "long",
    "unit-disallowed-list": ["px", "rem"],
    "max-nesting-depth": 4,
    "declaration-no-important": true,
    "selector-max-class": 2,
    "selector-class-pattern": "fudis-([a-z][a-z0-9]*)(-[a-z0-9]+)*$",
    "no-descending-specificity": true,
    "property-disallowed-list": [
      "color",
      "background",
      "background-color",
      "border",
      "outline",
      "font-size",
      "line-height",
      "font-family",
      "z-index"
    ]
  }
}
