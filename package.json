{
	"name": "fudis",
	"version": "0.1.0",
	"description": "Funidata Design System",
	"main": "index.js",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"dev": "cd ngx-fudis && ng build ngx-fudis --watch",
		"storybook": "cd ngx-fudis && npm run storybook",
		"sandbox": "cd ngx-fudis && ng serve",
		"test": "cd ngx-fudis && npm run test",
		"prepare": "husky install",
		"lint": "cd ngx-fudis && npm run lint",
		"stylelint": "cd ngx-fudis && npm run stylelint",
		"build-local-package": "cd ngx-fudis && ng build ngx-fudis && cd dist/ngx-fudis && npm pack --pack-destination ~",
		"version": "scripts/version_sub_projects.sh $npm_package_version",
		"postversion": "git commit --amend -m \"Bump to version v$npm_package_version\" && git push && git push --tags",
		"fudis-release": "scripts/release.sh"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/funidata/fudis.git"
	},
	"author": "Funidata",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/funidata/fudis/issues"
	},
	"homepage": "https://funidata.github.io/fudis/main/",
	"devDependencies": {
		"husky": "^8.0.3"
	}
}
